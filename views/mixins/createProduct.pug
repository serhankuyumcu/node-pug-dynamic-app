mixin createProduct(product)
    .col-md-4.pb-3
        .card
            img(src=`/img/${product.imageUrl}` alt=`${product.description}`).card-image-top
            .card-body
                h3.card-title
                    a(href=`/products/${product._id}`) #{product.name}
                small.text-muted
                    i.fa.fa-try #{product.price}
            .card-footer.text-center
                a(href=`/products/${product._id}`).btn-btn-outline-primary.btn-sm Details
                form(action='/cart' method='POST')
                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                    input(type='hidden' name='productId' value=`${product._id}`)
                    button(type='submit').btn-outline-primary.btn-sm.ml-3 Add to Cart
