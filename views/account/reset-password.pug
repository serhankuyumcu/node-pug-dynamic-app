extends ../layouts/main_layout.pug

block styles 

    link(rel="stylesheet" href="/css/forms.css")


block content 
    if errorMessage 
        div.alert.alert-danger.col-sm-7 #{errorMessage}                 
    form(action="/reset-password" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row
            label(for="email").col-sm-2.col-form-label  Email
            .col-sm-5
                input.form-control#email(type="text"  name="email" required)
        
        .form-group.row
            .col-sm-5.offset-sm-2
                input(type="submit" value="Reset-Password").btn.btn-primary 